{
  "translation_engines": {
    "google_translate": {
      "enabled": true,
      "priority": 1,
      "timeout": 10,
      "description": "Google Translate免费API"
    },
    "mymemory": {
      "enabled": true,
      "priority": 2,
      "timeout": 10,
      "description": "MyMemory翻译API"
    },
    "deepl": {
      "enabled": false,
      "priority": 3,
      "api_key": "",
      "timeout": 15,
      "description": "DeepL API (需要API密钥)"
    }
  },
  "translation_settings": {
    "source_language": "zh",
    "target_language": "en",
    "use_cache": true,
    "cache_file": "translation_cache.json",
    "max_cache_size": 10000,
    "preserve_medical_terms": true,
    "auto_correct_format": true,
    "verbose_logging": false
  },
  "quality_scoring": {
    "medical_term_weight": 2.0,
    "keyword_weight": 1.5,
    "format_weight": 0.2,
    "punctuation_weight": 0.1,
    "case_sensitivity_weight": 0.2,
    "length_penalty": 0.5
  },
  "medical_terms": {
    "dictionary_file": "medical_terms.json",
    "auto_load": true,
    "case_sensitive": false,
    "custom_terms_file": "custom_terms.json"
  },
  "api_settings": {
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
    "retry_attempts": 3,
    "retry_delay": 1,
    "rate_limit_delay": 0.5
  },
  "output_settings": {
    "preserve_xml_format": true,
    "backup_original": true,
    "encoding": "utf-8",
    "xml_declaration": true
  }
}